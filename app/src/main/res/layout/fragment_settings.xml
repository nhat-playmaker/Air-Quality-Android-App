<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General"
                android:textSize="@dimen/settings_topic_text_size"
                android:textColor="#3948AB"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_func_text_size"
                android:text="Set environments"
                app:drawableEndCompat="@drawable/icon_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User preferences"
                android:textSize="@dimen/settings_topic_text_size"
                android:textColor="#3948AB"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/textViewSettingsAQIIndex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_func_text_size"
                android:text="AQI Index"
                app:drawableEndCompat="@drawable/icon_right" />

            <TextView
                android:id="@+id/textViewSelectAQIIndex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryGrayColor"
                android:textSize="@dimen/settings_status_text_size"
                android:text="VN AQI" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_func_text_size"
                android:text="Unit"
                app:drawableEndCompat="@drawable/icon_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryGrayColor"
                android:textSize="@dimen/settings_status_text_size"
                android:text="km/m, Â°C" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_func_text_size"
                android:text="System permission"
                app:drawableEndCompat="@drawable/icon_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Display"
                android:textSize="@dimen/settings_topic_text_size"
                android:textColor="#3948AB"
                android:layout_marginTop="50dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_func_text_size"
                android:text="Widget opacity"
                app:drawableEndCompat="@drawable/icon_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_func_text_size"
                android:text="Main pollutant concentration"
                app:drawableEndCompat="@drawable/icon_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryGrayColor"
                android:textSize="@dimen/settings_status_text_size"
                android:text="Display: Yes" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textSize="@dimen/settings_topic_text_size"
                android:textColor="#3948AB"
                android:layout_marginTop="50dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_func_text_size"
                android:text="Smart notifications"
                app:drawableEndCompat="@drawable/icon_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryGrayColor"
                android:textSize="@dimen/settings_status_text_size"
                android:text="Activated: Yes" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_func_text_size"
                android:text="Daily report"
                app:drawableEndCompat="@drawable/icon_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryGrayColor"
                android:textSize="@dimen/settings_status_text_size"
                android:text="Activated: Yes" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>