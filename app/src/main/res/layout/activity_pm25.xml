<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".pm25Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPM25"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:title="PM2.5"
        app:navigationIcon="@drawable/icon_back"
        android:background="@color/primaryTextColor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarPM25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is PM2.5?"
                android:textSize="18sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pm25_intro"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Where dose it come from?"
                android:textSize="18sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Source can be emitted from either manmade or natural sources,
or created by other pollutants."
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Combustion resulting from power plants"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Smoke and soot from wildfires and waste burning"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Vehicular emissions and combustion from motors"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Industrial processes involving chemical reactions between gases
(sulfur dioxide, nitrogen oxides, and volatile organic compounds"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How does it affect to our health?"
                android:textSize="18sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Short term effects"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Irritation to the eyes"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Irregular heartbeats"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Asthma attacks"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Coughing, chest tightness, and shortness of breath"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Long term effects"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Respiratory illness such as bronchitis, asthma, emphysema"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Lung tissue damage"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Cancer, heart attack"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Stroke"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Premature death"
                android:textSize="15sp"
                android:textColor="@color/contentTextColor"
                android:layout_marginTop="10dp"/>

        </LinearLayout>



    </ScrollView>



</RelativeLayout>